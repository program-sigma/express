<h1 class="my-3">Обновить запись</h1>
<form action="/update" method="post">
    <div class="form-group">
        <label for="name">Имя:</label>
        <input type="text" id="name" value="{{this.name}}" name="name" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="phone">Телефон:</label>
        <input type="text" id="phone" value="{{this.phone}}" name="phone" class="form-control" required>
    </div>
    <input type="submit" value="Обновить" class="btn btn-primary">
</form>
<form action="/delete" method="post" onsubmit="return confirm('Вы уверены, что хотите удалить эту запись?');">
    <input type="hidden" name="name" value="{{this.name}}">
    <input type="submit" value="Удалить" class="btn btn-danger mt-2">
    {{{cancelButton}}}
</form>
